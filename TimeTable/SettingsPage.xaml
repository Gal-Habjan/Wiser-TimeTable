<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TimeTable.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SettingsPage">
    <ScrollView>
            <VerticalStackLayout Padding="10" Spacing="10">
                <Label
                    FontSize="Large"
                    HorizontalOptions="Center"
                    Text="Settings" />


            <!--  Settings Grid  -->
            <HorizontalStackLayout
                Padding="10"
                Spacing="10"
                VerticalOptions="Center">
                <Label Text="Send Notification time in minutes" VerticalOptions="Center" />
                <Entry
                    x:Name="NotificationTime"
                    Keyboard="Numeric"
                    MaxLength="2"
                    TextChanged="OnNotificationTimeTextChanged"
                    WidthRequest="80" />
            </HorizontalStackLayout>
            <Grid x:Name="SettingsGrid" ColumnDefinitions="*, Auto" />
            <Button Clicked="OnCloseButtonClicked" Text="Close Settings" />
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>